{
  "version": 2,
  "builds": [
    {
      "src": "chat-backend/dist/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/chat-frontend"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "chat-backend/dist/main.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "chat-backend/dist/main.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
